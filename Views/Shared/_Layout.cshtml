<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <div class=" border-bottom ">
        <div class="row  m-2">
            <div class="d-flex col ms-5">
                <div class="d-flex align-content-center float-end ">
                    <img src="@Url.Content("~/Images/saketa.png ")" class="m-0 w-75 brand">
                </div>
                <div>
                    <span class="display-6 pe-5 me-5  text-info">Employee Directory</span><br>
                    <div class="fs-5">The Ultimate People Directory Experience</div>
                </div>
                <span class="col text-end align-bottom display-6 pt-4 ">
                    <span class="text-info ">Welcome, </span>
                    <span>Andrew Philips</span>
                </span>
            </div>
        </div>
    </div>
    <div class="row ms-5 mt-2">
        <div class="col-3">
           <partial name="Sidebar" />
        </div>
        <div class="col-9 ">
            <div class="row">
                 <div class="col p-0">
                    <partial name="Search" />
                 </div>
           </div>
           <div class="row h-75">
               <div class="col border m-2">
                    @RenderBody()
               </div>
           </div>
        </div>
    </div>
</body>
</html>
